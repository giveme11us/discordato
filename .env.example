# Main bot token (required)
DISCORD_BOT_TOKEN=your_main_bot_token

# Module-specific tokens (optional)
MOD_BOT_TOKEN=your_mod_bot_token
ONLINE_BOT_TOKEN=your_online_bot_token
INSTORE_BOT_TOKEN=your_instore_bot_token

# Discord configuration
GUILD_IDS=123456789012345678,987654321098765432
DEV_GUILD_ID=123456789012345678
COMMAND_PREFIX=/

# Module configuration
ENABLED_MODULES=mod,online,instore,redeye

# Module whitelist settings
# Comma-separated list of role IDs that CAN use mod module commands and features
MOD_WHITELIST_ROLE_IDS=123456789012345678,987654321098765432
# Comma-separated list of role IDs that CAN use online module commands and features
ONLINE_WHITELIST_ROLE_IDS=123456789012345678,987654321098765432
# Comma-separated list of role IDs that CAN use instore module commands and features
INSTORE_WHITELIST_ROLE_IDS=123456789012345678,987654321098765432

# Command settings
COMMAND_COOLDOWN=3
MAX_COMMANDS_PER_MINUTE=60

# Application settings
LOG_LEVEL=INFO
DEVELOPMENT=False

# Pinger Feature Settings
# Channel ID where ping notifications will be sent
PINGER_NOTIFICATION_CHANNEL_ID=999999999999999999
# Role IDs that CAN trigger notifications - ONLY users with these roles can trigger alerts
PINGER_WHITELIST_ROLE_IDS=111111111111111111,222222222222222222
# Whether to monitor @everyone pings
PINGER_MONITOR_EVERYONE=True
# Whether to monitor @here pings
PINGER_MONITOR_HERE=True
# Whether to monitor role pings
PINGER_MONITOR_ROLES=True

# Reaction Forward Feature Settings
# Comma-separated list of category IDs where messages will get the forward reaction
REACTION_FORWARD_CATEGORY_IDS=
# Comma-separated list of channel IDs that should be ignored even if they are in a whitelisted category
REACTION_FORWARD_BLACKLIST_CHANNEL_IDS=
# Whether to enable reaction forwarding feature
REACTION_FORWARD_ENABLED=True
# Whether to enable message forwarding when users react with forward emoji
REACTION_FORWARD_ENABLE_FORWARDING=True
# Title for forwarded message embeds
REACTION_FORWARD_TITLE=Forwarded Message

# Global Embed Customization Settings
# Single color for all embeds (hex format without the # symbol)
EMBED_COLOR=57fa1
# Footer settings
EMBED_FOOTER_TEXT=Discord Bot
EMBED_FOOTER_ICON_URL=https://example.com/footer-icon.png
# Thumbnail settings
EMBED_THUMBNAIL_URL=https://example.com/thumbnail.png
# Author display settings 
EMBED_SHOW_AUTHOR=False
EMBED_AUTHOR_NAME=Bot
EMBED_AUTHOR_ICON_URL=https://example.com/author-icon.png
# General settings
EMBED_DEFAULT_TITLE=Notification
EMBED_INCLUDE_TIMESTAMP=True

# Link Reaction Feature Settings
LINK_REACTION_ENABLED=True
LINK_REACTION_CATEGORY_IDS=
LINK_REACTION_BLACKLIST_CHANNEL_IDS=

# Store Product ID Extraction Settings
# Path to file where LUISAVIAROMA product IDs will be saved
luisaviaroma_drops_urls_path=/path/to/luisaviaroma_drop_urls.txt

# Keyword Filter Feature Settings
# Whether to enable the keyword filter feature
KEYWORD_FILTER_ENABLED=False
# If False, messages are logged but not deleted (for testing)
KEYWORD_FILTER_DRY_RUN=True
# Categories to monitor for filtered keywords
